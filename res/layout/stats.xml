<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/background">

<LinearLayout 
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:orientation="vertical">

    <TextView
        android:id="@+id/bowlerLeagueName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/MediumText"
        />
    <TextView
        android:id="@+id/dateRange"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/MediumText"
        />
    
    <View 
        android:layout_height="10dp"
        android:layout_width="fill_parent"
        />
    
    <TableLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:stretchColumns="1" >
        
        <TableRow >
            <TextView
            android:layout_column="1"
            android:text="Game Stats"
            android:gravity="center"
            style="@style/TableText"/>"
        
        </TableRow>
        
        <TableRow >
            <TextView
            android:layout_column="1"
            android:text="Score Avg"
            style="@style/TableText"/>
            
            <TextView
            android:id="@+id/tableAverage"
            android:text="0"
            style="@style/TableText"/>
        </TableRow>
        
        <TableRow >
            <TextView
            android:layout_column="1"
            android:text="Total Games"
            style="@style/TableText"/>
            
            <TextView
            android:id="@+id/tableTotalGames"
            android:text="0"
            style="@style/TableText"/>
        </TableRow>
        
         <TableRow >
            <TextView
            android:layout_column="1"
            android:text="High Game"
            style="@style/TableText"/>
            
            <TextView
            android:id="@+id/tableHighGame"
            android:text="0"
            style="@style/TableText"/>
        </TableRow>
        
        <TableRow >
            <TextView
            android:layout_column="1"
            android:text="High Series"
            style="@style/TableText"/>
            
            <TextView
            android:id="@+id/tableHighSeries"
            android:text="0"
            style="@style/TableText"/>
        </TableRow>
    </TableLayout>
    
    <View 
        android:layout_height="10dp"
        android:layout_width="fill_parent"
        />
    
    <TableLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:stretchColumns="1" >
        
        <TableRow >
            <TextView
            android:layout_column="1"
            android:text="Strike Stats"
            android:gravity="center"
            style="@style/TableText"/>"
        
        </TableRow>
        
        <TableRow >
            <TextView
            android:layout_column="1"
            android:text="Number of Strikes"
            style="@style/TableText"/>
            
            <TextView
            android:id="@+id/tableNumStrikes"
            android:text="0"
            style="@style/TableText"/>
        </TableRow>
        
        <TableRow >
            <TextView
            android:layout_column="1"
            android:text="Strike Chances"
            style="@style/TableText"/>
            
            <TextView
            android:id="@+id/tableStrikeChances"
            android:text="0"
            style="@style/TableText"/>
        </TableRow>
        
         <TableRow >
            <TextView
            android:layout_column="1"
            android:text="Strike Percentage"
            style="@style/TableText"/>
            
            <TextView
            android:id="@+id/tableStrikePercent"
            android:text="0"
            style="@style/TableText"/>
        </TableRow>
        
        <TableRow >
            <TextView
            android:layout_column="1"
            android:text="Most Strikes in a Row"
            style="@style/TableText"/>
            
            <TextView
            android:id="@+id/tableStrikesRow"
            android:text="0"
            style="@style/TableText"/>
        </TableRow>
    </TableLayout>
    
    <View 
        android:layout_height="10dp"
        android:layout_width="fill_parent"/>
    
    <TableLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:stretchColumns="1" >
        
        <TableRow >
            <TextView
            android:layout_column="1"
            android:text="Spare Stats"
            android:gravity="center"
            style="@style/TableText"/>"
        
        </TableRow>
        
        <TableRow >
            <TextView
            android:layout_column="1"
            android:text="Number of Spares"
            style="@style/TableText"/>
            
            <TextView
            android:id="@+id/tableNumSpares"
            android:text="0"
            style="@style/TableText"/>
        </TableRow>
        
        <TableRow >
            <TextView
            android:layout_column="1"
            android:text="Spare Chances"
            style="@style/TableText"/>
            
            <TextView
            android:id="@+id/tableSpareChances"
            android:text="0"
            style="@style/TableText"/>
        </TableRow>
        
         <TableRow >
            <TextView
            android:layout_column="1"
            android:text="Spare Percentage"
            style="@style/TableText"/>
            
            <TextView
            android:id="@+id/tableSparePercent"
            android:text="0"
            style="@style/TableText"/>
        </TableRow>
        
    </TableLayout>

</LinearLayout>
</ScrollView>